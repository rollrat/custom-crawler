<Window x:Class="CustomCrawler.CustomCrawlerCAL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomCrawler"
        mc:Ignorable="d"
        Title="Custom Crawler CAL" Height="415" Width="592">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Pattern" Grid.Row="0" FontSize="15" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="Result" Grid.Row="1" FontSize="15"/>
    </Grid>
</Window>
